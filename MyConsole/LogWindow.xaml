<Window x:Class="MyConsole.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="系统日志监控" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Button x:Name="BtnPause" Content="暂停业务逻辑" Width="100" Click="BtnPause_Click" Background="#FFDDDD"/>
            <Button Content="清空日志" Width="80" Margin="10,0,0,0" Click="BtnClear_Click"/>
            <CheckBox x:Name="ChkAutoScroll" Content="自动滚动" IsChecked="True" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <TextBox x:Name="TxtLog" Grid.Row="1" 
                 Background="Black" Foreground="#00FF00" 
                 FontFamily="Consolas" FontSize="14"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 BorderThickness="0"/>
    </Grid>
</Window>
