<Window x:Class="My.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My"
        xmlns:modbus="clr-namespace:MyModbus;assembly=MyModbus"
        xmlns:console="clr-namespace:MyConsole;assembly=MyConsole"
        mc:Ignorable="d"
        xmlns:config="clr-namespace:MyConfig.Controls;assembly=MyConfig"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Border Padding="10" Background="#333">
            <modbus:DashboardEntry HorizontalAlignment="Right"/>
            
        </Border>
        <config:ConfigButton  />
        <Button Content="Run Calculation Demo" Command="{Binding RunCalculationCommand}" Padding="10" Margin="10"/>
        <console:ConsoleButton HorizontalAlignment="Right" 
                         VerticalAlignment="Top" 
                         Margin="10"/>
    </StackPanel>
</Window>
